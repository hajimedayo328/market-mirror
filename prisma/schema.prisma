// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Idea {
  id             Int      @id @default(autoincrement())
  title          String   @db.VarChar(200)
  description    String   @db.Text
  targetAudience String   @db.VarChar(500)
  category       String?  @db.VarChar(100)
  expectedPrice  Decimal? @db.Decimal(10, 2)
  version        Int      @default(1)
  parentId       Int?
  status         String   @default("draft") @db.VarChar(50)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  reviews          Review[]
  parent           Idea?      @relation("IdeaVersions", fields: [parentId], references: [id], onDelete: SetNull)
  improvements     Idea[]     @relation("IdeaVersions")
  proposals        Proposal[] @relation("IdeaProposals")
  adoptedProposals Proposal[] @relation("AdoptedProposal")

  @@map("ideas")
}

model Persona {
  id             Int      @id @default(autoincrement())
  name           String   @db.VarChar(100)
  age            Int
  gender         String   @db.VarChar(20)
  occupation     String   @db.VarChar(100)
  annualIncome   Int
  personality    String   @db.Text
  hobbies        String   @db.Text
  challenges     String   @db.Text
  buyingBehavior String   @db.Text
  category       String   @db.VarChar(100)
  createdAt      DateTime @default(now())

  reviews Review[]

  @@map("personas")
}

model Review {
  id                    Int      @id @default(autoincrement())
  ideaId                Int
  personaId             Int
  score                 Int
  comment               String   @db.Text
  willBuy               Boolean
  improvementSuggestion String   @db.Text
  pricePerception       String?  @db.VarChar(50)
  trustLevel            Int?
  createdAt             DateTime @default(now())

  idea    Idea    @relation(fields: [ideaId], references: [id], onDelete: Cascade)
  persona Persona @relation(fields: [personaId], references: [id], onDelete: Cascade)

  @@unique([ideaId, personaId])
  @@index([ideaId])
  @@index([personaId])
  @@map("reviews")
}

model Proposal {
  id                Int      @id @default(autoincrement())
  sourceIdeaId      Int
  title             String   @db.VarChar(200)
  description       String   @db.Text
  targetAudience    String   @db.VarChar(500)
  status            String   @default("pending") @db.VarChar(50)
  adoptedAsIdeaId   Int?
  aiReasoning       String?  @db.Text
  estimatedScore    Decimal? @db.Decimal(3, 1)
  selectionReason   String?  @db.Text
  createdAt         DateTime @default(now())
  adoptedAt         DateTime?

  sourceIdea  Idea  @relation("IdeaProposals", fields: [sourceIdeaId], references: [id], onDelete: Cascade)
  adoptedIdea Idea? @relation("AdoptedProposal", fields: [adoptedAsIdeaId], references: [id], onDelete: SetNull)

  @@index([sourceIdeaId])
  @@index([status])
  @@map("proposals")
}